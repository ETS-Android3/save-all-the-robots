<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <gradient android:angle="-90" android:endColor="#bfc507" android:startColor="#d6dd08" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#5e7974" />
            <solid android:color="#58857e" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#FFFF" />
            <gradient android:angle="-90" android:centerColor="#eef609" android:endColor="#868A08" android:startColor="#f0f722" />
        </shape>
    </item>

</selector>