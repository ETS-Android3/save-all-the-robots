<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Checked && Pressed-->
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="90dp" android:topRightRadius="8dp" />
            <gradient android:angle="270" android:centerColor="#17df01" android:endColor="#158a08" android:startColor="#70fa58" />
            <stroke android:width="1dp" android:color="#12610b" />
        </shape>
    </item>

    <!-- Button No Checked && Pressed-->
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="90dp" android:topRightRadius="8dp" />
            <gradient android:angle="270" android:centerColor="#df0122" android:endColor="#8a0815" android:startColor="#fc5565" />
            <stroke android:width="1dp" android:color="#610b16" />
        </shape>
    </item>

    <!-- Button Checked=True-->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="90dp" android:topRightRadius="8dp" />
            <gradient android:angle="270" android:centerColor="#17df01" android:endColor="#158a08" android:startColor="#70fa58" />
            <stroke android:width="1dp" android:color="#12610b" />
        </shape>
    </item>

    <!-- Button Checked=False-->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="90dp" android:topRightRadius="8dp" />
            <gradient android:angle="270" android:centerColor="#df0122" android:endColor="#8a0815" android:startColor="#fc5565" />
            <stroke android:width="1dp" android:color="#610b16" />
        </shape>
    </item>
</selector>