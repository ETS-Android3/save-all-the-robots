<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pages">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <ImageView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/victory_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title"
                android:orientation="horizontal"
                android:paddingBottom="90dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtScoreSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="@string/score"
                            android:textColor="#FFD700"
                            android:textSize="24dp" />

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtVarScoreSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="0000"
                            android:textColor="#DBA901"
                            android:textSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtSavedRobotsSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="@string/savedRobots"
                            android:textColor="#FFD700"
                            android:textSize="24dp" />

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtVarSavedRobotsSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="0000"
                            android:textColor="#DBA901"
                            android:textSize="24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtCompletedLevelsSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="@string/completedLevels"
                            android:textColor="#FFD700"
                            android:textSize="24dp" />


                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtVarCompletedLevelsSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="0000"
                            android:textColor="#DBA901"
                            android:textSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp">

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtItemUnlocked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="@string/unlock"
                            android:textColor="#FFD700"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <pis03_2016.savealltherobots.view.viewclass.TypeFaceTextView
                            android:id="@+id/txtItemDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="10"
                            android:shadowDy="10"
                            android:shadowRadius="9.0"
                            android:text="@string/description_robotGold"
                            android:textColor="#DBA901"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/unlockedItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/robot_gold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="#99000000"
        android:padding="4dp">

        <TextView
            android:id="@+id/constructNextLevelLoaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_main"
            android:onClick="onClickNextLevel"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/play"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


</RelativeLayout>